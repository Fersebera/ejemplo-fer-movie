@model IEnumerable<fer_movie_mvc.Models.Pelicula>

@{
    ViewData["Title"] = "Películas";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h1>Películas</h1>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-primary">Agregar película</a>
    </div>
</div>

<div class="table-responsive">
    <table id="tablaPeliculas" class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Imagen</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Titulo)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Genero)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Plataforma)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.PosterUrlPortada" height="50px" alt="Poster" class="rounded" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genero.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Plataforma.Nombre)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tablaPeliculas').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json'
                },
                responsive: true,
                pageLength: 5,
                lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Todos"]],
                columnDefs: [
                    {
                        targets: 0,
                        orderable: false,
                        searchable: false
                    }
                ]
            });
        });
    </script>
}
